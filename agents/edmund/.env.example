# Edmund Agent Local Testing Environment Variables
# Copy this file to .env and replace with your actual values
# DO NOT commit .env to git - it contains real secrets!

# =============================================================================
# Azure OpenAI Configuration (Required)
# =============================================================================
# Get these from Azure Portal > Your OpenAI Resource > Keys and Endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# Alternative: Use regular OpenAI instead of Azure (choose one)
# OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Azure Configuration (For deployment testing)
# =============================================================================
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_RESOURCE_GROUP=tminus15-dev-rg

# =============================================================================
# Edmund Agent Configuration
# =============================================================================
AGENT_NAME=edmund
AGENT_VERSION=1.0.0
ENVIRONMENT=local
LOG_LEVEL=debug

# =============================================================================
# Knowledge Sources
# =============================================================================
TMINUS15_REPO_URL=https://github.com/bengweeks/T-Minus-15
GITHUB_TOKEN=your-github-personal-access-token

# =============================================================================
# Local Testing Configuration
# =============================================================================
# Port for local testing server
LOCAL_PORT=8080

# Enable/disable features for testing
ENABLE_KNOWLEDGE_INDEXING=true
ENABLE_MCP_SERVERS=false
ENABLE_TELEMETRY=false

# Cache settings for local testing
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =============================================================================
# Future MCP Server Configuration (Optional)
# =============================================================================
# Azure DevOps Integration
AZURE_DEVOPS_ORGANIZATION=your-org-name
AZURE_DEVOPS_PROJECT=your-project-name
AZURE_DEVOPS_PAT=your-azure-devops-personal-access-token

# Docker Registry (if testing container deployment)
DOCKER_REGISTRY_URL=your-registry.azurecr.io
DOCKER_REGISTRY_USERNAME=your-registry-username
DOCKER_REGISTRY_PASSWORD=your-registry-password

# Kubernetes (if testing k8s deployment)
KUBECONFIG_PATH=/path/to/your/kubeconfig
KUBERNETES_NAMESPACE=tminus15-agents

# =============================================================================
# Monitoring and Observability (Optional)
# =============================================================================
APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string
AZURE_MONITOR_CONNECTION_STRING=your-azure-monitor-connection-string

# =============================================================================
# Security Configuration
# =============================================================================
# Secret encryption key (generate with: openssl rand -base64 32)
SECRET_ENCRYPTION_KEY=your-32-character-base64-encryption-key

# JWT signing key for authentication (if implementing auth)
JWT_SECRET=your-jwt-signing-secret

# =============================================================================
# Development Tools
# =============================================================================
# Enable debug features
DEBUG_MODE=true
VERBOSE_LOGGING=true
SAVE_TEST_RESULTS=true

# Test data directory
TEST_DATA_PATH=./test_data
TEST_RESULTS_PATH=./test_results